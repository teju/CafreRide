<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="8dp"
        android:layout_height="match_parent"
        tools:context="com.caferiders.SignUp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:id="@+id/top_view"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAFERIDES"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/maroon"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luxury Motorcycle Rentals"
                android:textStyle="italic"
                android:layout_marginTop="-5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER TO CONTINUE BOOKING"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/gray"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_border"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:paddingTop="10dp"
                        android:textStyle="bold|italic"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:paddingBottom="10dp"
                        android:layout_height="match_parent"
                        android:text="Indian"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/background"
                        android:paddingTop="10dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Foreigner"/>

                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Full Name "
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/account"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Gender"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/human_male"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Date Of Birth"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/calendar_month"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Email ID "
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Contact Number"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/account_badge_outline"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Password"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Confirm Password "
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Subscribe to great deals and auto news"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_marginTop="30dp"
                    android:text="Sign Up"
                    android:id="@+id/signup"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_note"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/gray"
                    android:textSize="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>